<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="student1" class="com.java.ex.Student">
		<constructor-arg value="홍길"></constructor-arg>
		<constructor-arg value="12살"></constructor-arg>
		<constructor-arg value="5학년"></constructor-arg>
		<constructor-arg value="1번"></constructor-arg>
	</bean>
	
	<bean id="student2" class="com.java.ex.Student">
		<constructor-arg value="세준"></constructor-arg>
		<constructor-arg value="25살"></constructor-arg>
		<constructor-arg value="4학년"></constructor-arg>
		<constructor-arg value="601223"></constructor-arg>
	</bean>
	
	<bean id="studentInfo" class="com.java.ex.StudentInfo">
		<constructor-arg>
			<ref bean="student1"/>
		</constructor-arg>
	</bean>

</beans>
